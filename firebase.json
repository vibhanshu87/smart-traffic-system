{
  "firestore": {
    "database": "(default)",
    "location": "asia-south1",
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "disallowLegacyRuntimeConfig": true,
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ]
    }
  ],
 "hosting": {
  "public": "frontend/dist",
  "ignore": [
    "firebase.json",
    "**/node_modules/**"
  ],
  "rewrites": [
    {
      "source": "/api/**",
      "function": "api"
    },
    {
      "source": "**",
      "destination": "/index.html"
    }
  ]
 }

}
